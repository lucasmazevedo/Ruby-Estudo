<p id="notice"><%= notice %></p>

<h1>Listagem de Clientes</h1>

<table>
  <thead>
    <tr>
      <th>Cpf</th>
      <th>Nome</th>
      <th>Dtnascimento</th>
      <th>Qtdpontos</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clientes.each do |cliente| %>
      <tr>
        <td><%= cliente.cpf %></td>
        <td><%= cliente.nome %></td>
        <td><%= cliente.dtNascimento %></td>
        <td><%= cliente.qtdPontos %></td>
        <td><%= cliente.status %></td>
        <td><%= link_to 'Exibir', cliente %></td>
        <td><%= link_to 'Editar', edit_cliente_path(cliente) %></td>
        <td><%= link_to 'Apagar', cliente, method: :delete, data: { confirm: 'Você está certo disso?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

